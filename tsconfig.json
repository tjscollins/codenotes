{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "typeRoots": [
        "node_modules/@types",
        "typings/",
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}
